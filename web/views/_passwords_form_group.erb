<div class="form-group">
  <label for="<%== id_prefix %>password">Your Password</label>
  <input id="<%== id_prefix %>password" name="password" type="password" placeholder="New password" class="form-control"
         data-parsley-required
         data-parsley-minlength="6"
         data-parsley-required-message="Please enter a new password."
         data-parsley-minlength-message="For your security, passwords must be at least 6-characters."
  />
  <input type="password" placeholder="Retype the new password" class="form-control"
         data-parsley-required
         data-parsley-required-message="Retype your new password."
  />
</div>